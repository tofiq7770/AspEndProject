@model SliderInfoUpdateVM


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update SliderInfo</h4>
            <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
               <div class="form-group">
                    <label asp-for="Title" >Title</label>
                    <input asp-for="Title" type="text" class="form-control" placeholder="Name">
                    <span  class="text-danger mt-2" asp-validation-for="Title"></span>
                </div>
                <div class="mt-3 form-group">
                    <label asp-for="SubTitle">SubTitle</label>
                    <input asp-for="SubTitle" class="form-control">
                    <span class="text-danger mt-2" asp-validation-for="SubTitle"></span>
                </div>
                
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                <a class="btn btn-light" asp-area="Admin" asp-controller="SliderInfo" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>