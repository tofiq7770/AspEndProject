@model HeaderVM


<!-- Spinner Start -->
<div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Navbar start -->
<div class="container-fluid fixed-top">
    <div class="container topbar bg-primary d-none d-lg-block">
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
                <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Adress  @Model.Settings["Address"]</a></small>
                <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">Email  @Model.Settings["Email"]</a></small>
            </div>
            <div class="top-link pe-2">
                <a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
                <a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
                <a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
            </div>
        </div>
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand"><h1 class="text-primary display-6">Fruitables</h1></a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
                    <a asp-action="Index" asp-controller="Shop" class="nav-item nav-link">Shop</a>
                    <a asp-action="Index" asp-controller="Contact" class="nav-item nav-link">Contact</a>


                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {

                            <div class="nav-item dropdown">
                                <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Admin</a>
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="dropdown-item">Dashboard</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="Product" class="dropdown-item">Product</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="Category" class="dropdown-item">Category</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="Slider" class="dropdown-item">Slider</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="SliderInfo" class="dropdown-item">SliderInfo</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="Feature" class="dropdown-item">Feature</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="FactContent" class="dropdown-item">FactContent</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="ServiceContent" class="dropdown-item">ServiceContent</a>
                                    <a asp-area="Admin" asp-action="Index" asp-controller="Fresh" class="dropdown-item">Fresh</a>
                                </div>
                            </div>
                        }

                    }
                </div>
                <div class="d-flex m-3 me-0">
                    <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                    <a asp-action="Index" asp-controller="Basket" class="position-relative me-4 my-auto">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                       <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1 basket-count" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">@Model.BasketCount</span>
                      </a>
                    <a asp-action="Login" asp-controller="Account" class="my-auto">
                        <i class="fas fa-user fa-2x">

                        </i>
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <div class="position-relative">
                            <h6 class=" mt-1 mx-3"> @User.Identity.Name</h6>
                            <a asp-action="Logout" asp-controller="Account" style="margin-top:-12px;" class=" position-absolute mx-3">Log Out</a>

                        </div>
                    }
                    else
                    {

                    }
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->
<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                    <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->